<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddMenuFragment">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40dp">

        <ImageButton
            android:id="@+id/ibClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:background="#0000"
            android:contentDescription="btnClose"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            app:tint="@color/md_theme_onSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Menu Information"
            android:textSize="21sp" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="15dp"
            android:paddingEnd="24dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:endIconMode="clear_text"
                app:hintTextColor="#025CF8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Food Name"
                    android:inputType="textPersonName"
                    android:textAppearance="@font/inter_medium"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:endIconMode="clear_text"
                app:hintTextColor="#025CF8">

                <AutoCompleteTextView
                    android:id="@+id/actCategory"
                    android:hint="Category"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:endIconMode="clear_text"
                app:hintTextColor="#025CF8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Price"
                    android:inputType="textPersonName"
                    android:textAppearance="@font/inter_medium"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:endIconMode="clear_text"
                app:hintTextColor="#025CF8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPrepTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Preparation Time"
                    android:inputType="textPersonName"
                    android:textAppearance="@font/inter_medium"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:endIconMode="clear_text"
                app:hintTextColor="#025CF8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Store"
                    android:inputType="textPersonName"
                    android:textAppearance="@font/inter_medium"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:endIconMode="clear_text"
                app:hintTextColor="#025CF8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDescription"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="top"
                    android:hint="Description"
                    android:inputType="textPersonName"
                    android:textAppearance="@font/inter_medium"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                app:boxStrokeColor="@color/md_theme_primary"
                app:endIconMode="clear_text"
                app:hintTextColor="#025CF8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputImageUrl"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="top"
                    android:hint="Image Url"
                    android:inputType="text"
                    android:textAppearance="@font/inter_medium"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>