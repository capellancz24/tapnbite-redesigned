<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment.ProfileFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="60dp"
        android:paddingBottom="25dp"
        android:theme="?attr/actionBarTheme"
        app:subtitle="Profile"
        app:subtitleCentered="true"
        app:subtitleTextAppearance="@style/Appbar.Subtitle"
        app:subtitleTextColor="@color/white"></com.google.android.material.appbar.MaterialToolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/userinfo"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@id/materialToolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Juan Dela Cruz"
                    android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                    android:textSize="@dimen/m3_sys_shape_corner_value_large_increased" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_medium"
                        android:paddingEnd="5dp"
                        android:text="ID:"
                        android:textColor="#878787"
                        android:textSize="@dimen/m3_sys_shape_corner_value_large" />

                    <TextView
                        android:id="@+id/tvUserID"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"
                        android:text="2024-000001"
                        android:textColor="#878787"
                        android:textSize="@dimen/m3_sys_shape_corner_value_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="Pellet Balance:"
                        android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                        android:textSize="@dimen/m3_sys_shape_corner_value_large" />

                    <TextView
                        android:id="@+id/tvPelletBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="500"
                        android:textAlignment="textEnd"
                        android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                        android:textSize="@dimen/m3_sys_shape_corner_value_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:paddingStart="5dp"
                        android:text="Pellets"
                        android:textAlignment="textEnd"
                        android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                        android:textSize="@dimen/m3_sys_shape_corner_value_large" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/md_theme_onSurfaceVariant_highContrast" />

            <Button
                android:id="@+id/btnTopUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#025CF8"
                android:fontFamily="@font/inter_bold"
                android:text="Top Up Pellets"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userinfo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="Informations"
        android:textColor="#57585B"
        android:textSize="17dp" />

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cvAboutUs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="29.13px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_info"
                app:tint="@color/md_theme_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="15dp"
                android:paddingBottom="1dp"
                android:text="About Us"
                android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="13dp"
                android:background="#0000"
                android:contentDescription="aboutus"
                android:src="@drawable/ic_arrow_right" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cvFaqs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cvAboutUs"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="29.13px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_forum"
                app:tint="@color/md_theme_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="15dp"
                android:paddingBottom="1dp"
                android:text="FAQs"
                android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="13dp"
                android:background="#0000"
                android:contentDescription="faqs"
                android:src="@drawable/ic_arrow_right" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:id="@+id/cvTermsAndCondition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cvFaqs"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="29.13px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_description"
                app:tint="@color/md_theme_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="15dp"
                android:paddingBottom="1dp"
                android:text="Terms and Condition"
                android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="13dp"
                android:background="#0000"
                android:contentDescription="termsandcondition"
                android:src="@drawable/ic_arrow_right" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:id="@+id/cvPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cvTermsAndCondition"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="29.13px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_shield"
                app:tint="@color/md_theme_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="15dp"
                android:paddingBottom="1dp"
                android:text="Privacy Policy"
                android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="13dp"
                android:background="#0000"
                android:contentDescription="privacypolicy"
                android:src="@drawable/ic_arrow_right" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:id="@+id/cvLogout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cvPrivacyPolicy"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="29.13px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_logout"
                app:tint="@color/md_theme_tertiaryContainer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="15dp"
                android:paddingBottom="1dp"
                android:text="Logout"
                android:textColor="@color/md_theme_tertiaryContainer"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>