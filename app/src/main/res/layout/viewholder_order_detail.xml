<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="15dp"
    android:clickable="true"
    app:cardCornerRadius="30px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/ic_store"
                app:tint="@color/md_theme_primary" />

            <TextView
                android:id="@+id/tvCanteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                android:text="Canteen 1"
                android:textSize="@dimen/m3_sys_shape_corner_value_large"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                android:text=","
                android:textSize="@dimen/m3_sys_shape_corner_value_large"/>

            <TextView
                android:id="@+id/tvStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                android:text="Snackbite"
                android:textSize="@dimen/m3_sys_shape_corner_value_large"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFoodContainerPicture"
            android:layout_below="@id/linearLayout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="#D6E5FE"
            app:cardCornerRadius="15px">

            <ImageView
                android:id="@+id/ivFoodPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/karekr" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cvFoodContainerPicture"
            android:layout_below="@id/linearLayout"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/tvTotalItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="1"
                    android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                    android:textSize="@dimen/m3_sys_shape_corner_value_large" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="x"
                    android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                    android:textSize="@dimen/m3_sys_shape_corner_value_large"/>

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Kare-Kare"
                    android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                    android:textSize="@dimen/m3_sys_shape_corner_value_large"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="15 Jan 2025"
                    android:textColor="#878787"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/tvProcess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:text="On Process"
                    android:textColor="@color/md_theme_tertiaryContainer"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="P"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:text="10.50"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>