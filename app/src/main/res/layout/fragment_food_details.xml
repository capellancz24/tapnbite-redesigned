<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment.FoodDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFoodContainerPicture"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardBackgroundColor="#D6E5FE">

                <ImageView
                    android:id="@+id/ivFoodPicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/karekr" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFoodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_bold"
                            android:text="Kare-Kare"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="@dimen/m3_sys_shape_corner_value_extra_large_increased" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvPrepTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="3dp"
                                android:drawableStart="@drawable/ic_lock_fill"
                                android:drawablePadding="6dp"
                                android:fontFamily="@font/inter_semibold"
                                android:text="5"
                                android:textSize="@dimen/m3_sys_shape_corner_value_large" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_semibold"
                                android:text="min"
                                android:textSize="@dimen/m3_sys_shape_corner_value_large" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@color/md_theme_inverseOnSurface"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ibRemove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/md_theme_inverseOnSurface"
                            android:contentDescription="removeItem"
                            android:padding="7dp"
                            app:srcCompat="@drawable/ic_remove" />

                        <TextView
                            android:id="@+id/tvTotalItem"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="@dimen/m3_sys_shape_corner_value_large" />

                        <ImageButton
                            android:id="@+id/ibAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/md_theme_inverseOnSurface"
                            android:contentDescription="addItem"
                            android:padding="7dp"
                            app:srcCompat="@drawable/ic_add" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Description"
                        android:textColor="@color/md_theme_onSurfaceVariant_highContrast"
                        android:textSize="@dimen/m3_sys_shape_corner_value_large_increased" />

                    <TextView
                        android:id="@+id/tvFoodDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:lineSpacingExtra="5dp"
                        android:text="@string/kare_kare_description"
                        android:textColor="#5F5F5F"
                        android:textSize="@dimen/m3_sys_shape_corner_value_large" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/md_theme_inverseOnSurface"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Price"
                android:textColor="#878787"
                android:textSize="@dimen/m3_sys_shape_corner_value_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="P"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="@dimen/m3_sys_shape_corner_value_large_increased" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="65.00"
                    android:textColor="@color/md_theme_primary"
                    android:textSize="@dimen/m3_sys_shape_corner_value_large_increased" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddtoCart"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="Add to Cart"
            android:textSize="@dimen/m3_sys_shape_corner_value_large" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:clickable="true"
            app:srcCompat="@drawable/ic_arrow_left"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:contentDescription="goBack"
            android:padding="15dp" />

        <ImageButton
            android:id="@+id/ibCart"
            android:clickable="true"
            app:srcCompat="@drawable/ic_shoppingbag_fill"
            android:layout_marginStart="290dp"
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:contentDescription="goBack"
            android:padding="15dp"
            app:tint="@color/white" />
    </LinearLayout>

</RelativeLayout>